{{#if updateQuestionForm}}
  <h4>Update {{question.name}}'s Question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=question.name type="text"}}
        </div>

        <div class="form-group">
          <label for="content">Question</label>
          {{input value=content id="content" placeholder=question.content type="text"}}
        </div>

        <div class="form-group">
          <label for="details">Details</label>
          {{textarea value=details id="details" placeholder=question.details class="materialize-textarea"}}
        </div>

        <button class="waves-effect waves-light btn-large" {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}} class="waves-effect waves-light btn-large">Update</button>
{{/if}}
