<h1>New Answer</h1>
    <div>
      <form>
        <div class="input-field">
          <i class="material-icons prefix">account_circle</i>
          {{input autofocus="true" value=name id="answername" type="text"}}
          <label for="answername">Name</label>
        </div>

        <div class="input-field">
          <i class="material-icons prefix">comment</i>
          {{textarea value=content id="answercontent" class="materialize-textarea"}}
          <label for="answercontent">Answer</label>
        </div>

        <button class="waves-effect waves-light btn-large blue hoverable" {{action 'save'}}>Save</button>
      </form>
    </div>
