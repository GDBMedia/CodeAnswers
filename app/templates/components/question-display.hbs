<div class="z-depth-1 clearfix box hoverable">
  <div class="dropdown">
  <button class="mybtn dropdown-toggle pull-right" type="button" data-toggle="dropdown">
  <i class="medium material-icons">more_vert</i></button>
  <ul class="dropdown-menu pull-right">
    <li {{action 'delete' question}} ><a>Delete <i class="material-icons">delete</i></a></li>
    <li>{{#link-to 'question' question.id}}Edit<i class="material-icons">model_edit</i>{{/link-to}}</li>
  </ul>
</div>
  <h2><strong>{{question.name}}</strong></h2>
  <p class="timestampIndex">{{question.timestamp}}</p>
  <ul class="contentList">
    <div class="contentLink">{{#link-to 'question' question.id}}<li class="content">{{question.content}}</li>{{/link-to}}</div>
  </ul>
  <div class="row" id="footer">
    <div class="col s6">
      <button class="waves-effect waves-light orange darken-1 btn-large hoverable"{{action "showAnswers"}} id="answerbtn"><strong class="answertext">{{answers question.answers.length}}<i class="material-icons answericon">chat</i></strong></button>
    </div>
    <div class="col s6">
      <a class="right" {{action 'addToFavorites' question}}>{{star clicked}}</a>
    </div>
  </div>
    {{#if answerShow}}
      {{#if (eq sortedAnswers.length 0)}}
        <hr>
        <h3 class="center text-muted">No Answers</h3>
      {{/if}}
      {{show-answers answers=sortedAnswers question=question}}
    {{/if}}
  </div>
